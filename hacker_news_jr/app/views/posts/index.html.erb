<h3>Welcome to Hacker News Jr</h3>

<div>
  <% if session[:user_id] %>
    <%= link_to 'add new post', new_post_path %>
  <% end %>
</div>

<br>

<div>
  <% @posts.each_with_index do |post, index| %>
    <div>
      <span id="<%= post.id %>"><%= upvote_count(post) %></span>
      <%= link_to 'upvote', post_votepost_path(post, vote: :true), method: :post, class: 'upvote' %>
      <%= index + 1 %>.
      <%= link_to "#{post.title} (#{post.url})", url_for(extlink(post.url)) %>
      <%= link_to find_username(post), user_path(post.user_id) %>
      <%= link_to 'show', post_path(post) %>
    </div>
  <% end %>
</div>
